# Cloudflare Pages Environment Variables Template
# Copy this file to .env and fill in your values

# ===========================================
# CLOUDFLARE CONFIGURATION
# ===========================================

# Required: Get these from your Cloudflare dashboard
CLOUDFLARE_API_TOKEN=your_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# Optional: Project name (defaults to braille-stl-generator)
CLOUDFLARE_PROJECT_NAME=braille-stl-generator

# ===========================================
# BUILD CONFIGURATION
# ===========================================

# Build environment
NODE_ENV=production

# Application metadata
VITE_APP_NAME="Braille STL Generator"
VITE_APP_VERSION="2.0.0"
VITE_CLOUDFLARE_PAGES=true

# Build optimization flags
VITE_BUILD_ANALYZE=false
VITE_SOURCEMAP=false

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Custom domain (optional)
CUSTOM_DOMAIN=your-domain.com

# Branch configuration
PRODUCTION_BRANCH=main
PREVIEW_BRANCH=feature/cloudflare-client

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Development server
VITE_DEV_PORT=3000
VITE_PREVIEW_PORT=4173

# Debug flags
VITE_DEBUG_WORKERS=false
VITE_DEBUG_CSG=false

# ===========================================
# ANALYTICS & MONITORING (Optional)
# ===========================================

# Google Analytics (if desired)
# VITE_GA_TRACKING_ID=GA-XXXXXXXXX

# Error tracking (if desired)  
# VITE_SENTRY_DSN=https://...

# Performance monitoring
VITE_PERFORMANCE_MONITORING=true

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================

# Worker configuration
VITE_WORKER_TIMEOUT=30000
VITE_MAX_WORKER_INSTANCES=2

# Memory limits
VITE_MAX_MEMORY_MB=512

# File size limits
VITE_MAX_STL_SIZE_MB=50

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Content Security Policy customization
VITE_CSP_CUSTOM=""

# Additional security headers
VITE_SECURITY_HEADERS=true

# CORS configuration
VITE_CORS_ORIGINS="*"
