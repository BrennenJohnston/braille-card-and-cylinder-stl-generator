{
  "version": 2,
  "builds": [
    { "src": "wsgi.py", "use": "@vercel/python" },
    { "src": "static/**", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/static/(.*)", "destination": "/static/$1" },
    { "source": "/node_modules/liblouis-build/(.*)", "destination": "/static/liblouis/$1" },
    { "source": "/node_modules/liblouis/(.*)", "destination": "/static/liblouis/$1" },
    { "source": "/(.*)", "destination": "/wsgi.py" }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
